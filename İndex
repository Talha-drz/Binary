    <script>
        // Film veritabanƒ±
        const films = [
            // Klasikler
            "E≈ükƒ±ya", "Hababam Sƒ±nƒ±fƒ±", "Selvi Boylum Al Yazmalƒ±m", "S√ºt Karde≈üler", "Tosun Pa≈üa",
            "Z√ºƒü√ºrt Aƒüa", "Arabesk", "Muhsin Bey", "Aƒüƒ±r Roman", "Eyl√ºl",
            
            // Komedi
            "Vizontele", "Vizontele Tuuba", "Recep ƒ∞vedik", "Recep ƒ∞vedik 2", "Recep ƒ∞vedik 3",
            "Gora", "A.R.O.G", "D√ºƒü√ºn Dernek", "D√ºƒü√ºn Dernek 2", "Organize ƒ∞≈üler",
            "Propaganda", "Hokkabaz", "Neredesin Firuze",
            
            // Drama
            "Babam ve Oƒülum", "Mucize", "Kƒ±≈ü Uykusu", "Mustang", "Ayla",
            "7. Koƒüu≈ütaki Mucize", "M√ºsl√ºm", "Cep Herk√ºl√º: Naim S√ºleymanoƒülu", "Dilberay",
            "Bergen", "Kƒ±rmƒ±zƒ± Oda", "Miracle in Cell No. 7",
            
            // Dizi-Film
            "Ezel", "Kurtlar Vadisi", "Behzat √á", "Arka Sokaklar", "Leyla ile Mecnun"
        ];

        // Pozitif ki≈üilik √∂zellikleri
        const positiveTraits = [
            "üéÄ Cesur ve maceraperest bir ki≈üiliƒüe sahipsiniz!",
            "‚ú® Yaratƒ±cƒ± zekanƒ±z ve hayal g√ºc√ºn√ºz olduk√ßa geli≈ümi≈ü!",
            "üå∑ Duygusal derinliƒüiniz ve empati yeteneƒüiniz m√ºkemmel!",
            "üéØ Stratejik d√º≈ü√ºnme ve analiz yeteneƒüiniz √ßok g√º√ßl√º!",
            "üé™ Mizah anlayƒ±≈üƒ±nƒ±z ve pozitif enerjiniz etkileyici!",
            "üå∏ ƒ∞nsan ili≈ükilerinde usta ve sosyal zekanƒ±z y√ºksek!",
            "üíé Liderlik vasƒ±flarƒ±nƒ±z ve kararlƒ±lƒ±ƒüƒ±nƒ±z dikkat √ßekici!",
            "üé® Sanatsal bakƒ±≈ü a√ßƒ±nƒ±z ve estetik anlayƒ±≈üƒ±nƒ±z harika!",
            "üìö Entelekt√ºel birikiminiz ve merak duygunuz takdire ≈üayan!",
            "üåü G√º√ßl√º karakteriniz ve dayanƒ±klƒ±lƒ±ƒüƒ±nƒ±z √∂rnek alƒ±nasƒ±!",
            "üåà Optimist bakƒ±≈ü a√ßƒ±nƒ±z ve umut dolu yakla≈üƒ±mƒ±nƒ±z bula≈üƒ±cƒ±!",
            "üé≠ Derin duygusal zekanƒ±z ve insan tanƒ±ma yeteneƒüiniz m√ºthi≈ü!",
            "‚ö° Enerjiniz ve dinamik ki≈üiliƒüiniz √ßevrenize ilham veriyor!",
            "ü¶ã Bilgelik ve saƒüduyu dolu bir ki≈üiliƒüe sahipsiniz!",
            "üé† Renkli ki≈üiliƒüiniz ve sƒ±ra dƒ±≈üƒ± bakƒ±≈ü a√ßƒ±nƒ±z √ßok √∂zel!",
            "üîÆ Sadakatiniz ve g√ºvenilirliƒüiniz en deƒüerli √∂zellikleriniz!",
            "üéº Ritim duygunuz ve sanata olan yatkƒ±nlƒ±ƒüƒ±nƒ±z olaƒüan√ºst√º!",
            "üîç Detaycƒ± g√∂zlem g√ºc√ºn√ºz ve sezginiz √ßok keskin!",
            "üåç Evrensel bakƒ±≈ü a√ßƒ±nƒ±z ve k√ºlt√ºrel birikiminiz etkileyici!",
            "üí´ Karizmanƒ±z ve etkileyici ki≈üiliƒüiniz her ortamda fark ediliyor!"
        ];

        // Oyun durumu
        let state = {
            currentQuestion: 0,
            totalQuestions: 5,
            filmScores: {},
            passCount: 0,
            currentFilms: []
        };

        // DOM elementleri
        const startScreen = document.getElementById('start-screen');
        const questionScreen = document.getElementById('question-screen');
        const resultScreen = document.getElementById('result-screen');
        const startBtn = document.getElementById('start-btn');
        const restartBtn = document.getElementById('restart-btn');
        const questionCounter = document.getElementById('question-counter');
        const questionText = document.getElementById('question-text');
        const film1Text = document.getElementById('film1-text');
        const film2Text = document.getElementById('film2-text');
        const progressBar = document.getElementById('progress-bar');
        const optionBtns = document.querySelectorAll('.option-btn');

        // Film skorlarƒ±nƒ± sƒ±fƒ±rla
        function resetScores() {
            state.filmScores = {};
            films.forEach(film => {
                state.filmScores[film] = 0;
            });
            state.passCount = 0;
            state.currentQuestion = 0;
        }

        // Rastgele film se√ß
        function getRandomFilms() {
            let film1, film2;
            do {
                film1 = films[Math.floor(Math.random() * films.length)];
                film2 = films[Math.floor(Math.random() * films.length)];
            } while (film1 === film2);
            
            return [film1, film2];
        }

        // Soruyu g√∂ster
        function showQuestion() {
            state.currentFilms = getRandomFilms();
            
            questionCounter.textContent = `Soru ${state.currentQuestion + 1}/${state.totalQuestions}`;
            questionText.textContent = "Hangisini daha √ßok seviyorsun?";
            film1Text.textContent = state.currentFilms[0];
            film2Text.textContent = state.currentFilms[1];
            
            const progress = ((state.currentQuestion) / state.totalQuestions) * 100;
            progressBar.style.width = `${progress}%`;
        }

        // Cevap i≈üleme
        function handleAnswer(choice) {
            if (choice === '1') {
                
                state.filmScores[state.currentFilms[0]]++;
            } else if (choice === '2') {
                
                state.filmScores[state.currentFilms[1]]++;
            } else if (choice === '3') {
                state.passCount++;
                
            }
            state.currentQuestion++;

            if (state.currentQuestion < state.totalQuestions) {
                showQuestion();
            } else {
                showResults();
            }
        }

        // Sonu√ßlarƒ± g√∂ster
        function showResults() {
            // En y√ºksek puanlƒ± filmleri bul
            const topFilms = Object.entries(state.filmScores)
                .filter(([_, score]) => score > 0)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 5);

            // ƒ∞statistikleri g√ºncelle
            document.getElementById('answered-count').textContent = state.totalQuestions - state.passCount;
            document.getElementById('pass-count').textContent = state.passCount;
            document.getElementById('total-score').textContent = topFilms.reduce((sum, [_, score]) => sum + score, 0);

            // Ki≈üilik analizi
            const randomTrait = positiveTraits[Math.floor(Math.random() * positiveTraits.length)];
            document.getElementById('personality-text').textContent = randomTrait;

            // Film sonu√ßlarƒ±nƒ± g√∂ster
            const resultsGrid = document.getElementById('results-grid');
            resultsGrid.innerHTML = '';
            
            topFilms.forEach(([film, score], index) => {
                const resultCard = document.createElement('div');
                resultCard.className = `result-card ${index === 0 ? 'top' : ''}`;
                resultCard.innerHTML = `
                    <h3>${film}</h3>
                    <div class="votes">${score} oy</div>
                `;
                resultsGrid.appendChild(resultCard);
            });

            // √ñzel notlar
            const specialNotes = document.getElementById('special-notes');
            let notesHTML = '<h3>üéÄ √ñzel Notlar</h3>';
            
            if (topFilms.some(([film]) => film === 'Ezel')) {
                notesHTML += '<p>‚Ä¢ "Ezel" se√ßiminizle; stratejik zekanƒ±z ve karma≈üƒ±k konulara hakimiyetiniz dikkat √ßekici!</p>';
            }
            
            if (topFilms.some(([film]) => film === 'Hababam Sƒ±nƒ±fƒ±')) {
                notesHTML += '<p>‚Ä¢ "Hababam Sƒ±nƒ±fƒ±" tercihiniz; eƒülenceli ve arkada≈ü canlƒ±sƒ± yapƒ±nƒ±zƒ± g√∂steriyor!</p>';
            }
            
            if (topFilms.some(([film]) => film === 'Babam ve Oƒülum')) {
                notesHTML += '<p>‚Ä¢ "Babam ve Oƒülum" se√ßiminiz; aile deƒüerlerine verdiƒüiniz √∂nemi vurguluyor!</p>';
            }

            if (state.passCount > 0) {
                notesHTML += `<p>‚Ä¢ ${state.passCount} kez pas ge√ßmeniz, se√ßici ve d√ºr√ºst bir ki≈üiliƒüe sahip olduƒüunuzu g√∂steriyor!</p>`;
            }

            specialNotes.innerHTML = notesHTML;

            // Ekranlarƒ± deƒüi≈ütir
            questionScreen.classList.remove('active');
            resultScreen.classList.add('active');
        }

        // Testi yeniden ba≈ülat
        function restartTest() {
            resetScores();
            resultScreen.classList.remove('active');
            startScreen.classList.add('active');
        }

        // Event listeners
        startBtn.addEventListener('click', () => {
            resetScores();
            startScreen.classList.remove('active');
            questionScreen.classList.add('active');
            showQuestion();
        });

        restartBtn.addEventListener('click', restartTest);

        optionBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                const choice = e.currentTarget.getAttribute('data-choice');
                handleAnswer(choice);
            });
        });

        // Sayfa y√ºklendiƒüinde skorlarƒ± sƒ±fƒ±rla
        resetScores();
    </script>
